    "url": "git+https://github.com/musement/iso-duration.git"
  },
  "bugs": {
    "url": "https://github.com/musement/iso-duration/issues"
  },
  "keywords": [
    "iso",
    "duration",
    "iso8601",
    "humanize",
    "time"
